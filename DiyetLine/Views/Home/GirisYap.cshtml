@model DiyetLine.Models.KullaniciIsletmeViewModel
@{
    ViewBag.Title = "GirisYap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<body>
    <div class="site-section site-section-sm">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-lg-8 mb-5">
@using (Html.BeginForm("GirisYap", "Home", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <form action="#" class="p-5 bg-white">
                        <div class="row form-group">
                            <div class="col-md-12 mb-3 mb-md-0">
                              
                                @Html.LabelFor(model => model.kullanici.Email, htmlAttributes: new { @class = "font-weight-bold" })

                                @Html.EditorFor(model => model.kullanici.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email" } })
                      
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.kullanici.Sifre, htmlAttributes: new { @class = "font-weight-bold" })

                                @Html.EditorFor(model => model.kullanici.Sifre, new { htmlAttributes = new { @class = "form-control", @placeholder = "Şifre", @type = "password" } })
                                @Html.HiddenFor(model => model.isletme_sahibi.Sifre)
                             </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-md-12">
                                <input type="submit" value="Giriş Yap" class="btn btn-primary pill text-white px-5 py-2" style="width:20%;">
                            </div>
                        </div>

                    </form>
}
                </div>
            </div>
        </div>
    </div>
</body>
</html>

